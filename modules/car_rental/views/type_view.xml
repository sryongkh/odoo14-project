<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_type_tree" model="ir.ui.view">
        <field name="name">car.type.tree</field>
        <field name="model">car.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="type" />
                <field name="description" />
            </tree>
        </field>
    </record>

    <record id="view_type_form" model="ir.ui.view">
        <field name="name">car.type.form</field>
        <field name="model">car.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="type" />
                        </group>
                        <group>
                            <field name="description" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_car_type" model="ir.actions.act_window">
        <field name="name">Type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">car.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create first type of car!
            </p>
        </field>
    </record>

    <menuitem id="menu_type" name="Type" parent="menu_reservation_root" action="action_car_type" sequence="20"/>

</odoo>
