<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_reservation_tree" model="ir.ui.view">
        <field name="name">car.reservation.tree</field>
        <field name="model">car.reservation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="reference" />
                <field name="car_type" />
                <field name="name" />
                <field name="car_reg" />
                <field name="start_date" />
                <field name="end_date" />
            </tree>
        </field>
    </record>

    <record id="view_reservation_form" model="ir.ui.view">
        <field name="name">car.reservation.form</field>
        <field name="model">car.reservation</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="reference" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="car_type" />
                            <field name="name" />
                            <field name="car_reg" />
                        </group>
                        <group>
                            <field name="start_date" />
                            <field name="end_date" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="reservation_action" model="ir.actions.act_window">
        <field name="name">Reservation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">car.reservation</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create first Reservation!
            </p>
        </field>
    </record>

    <menuitem id="car_root" name="Car" sequence="10"/>
    <menuitem id="car_reservation_root" name="Reservation" parent="car_root" action="reservation_action" sequence="10"/>

</odoo>
